[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
[pull]
	rebase = true
[credential]

[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
    conflictstyle = diff3
[mergetool "vimdiff"]
    cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED \
          -c '$wincmd w' -c 'wincmd J'helper = store
